# OutageX Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# ============================================
# Required - Backend Connection
# ============================================
# Backend API URL (used for API calls)
NEXT_PUBLIC_BACKEND_URL=http://localhost:3001

# Socket.io connection URL (for real-time updates)
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001

# ============================================
# Optional - Authentication (NextAuth)
# ============================================
# Secret key for NextAuth.js (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your_nextauth_secret_key_here

# Frontend URL for NextAuth callbacks
NEXTAUTH_URL=http://localhost:3000

# ============================================
# Optional - Email (Resend)
# ============================================
# Resend API key for sending emails (magic link authentication)
RESEND_API_KEY=your_resend_api_key_here

# ============================================
# Optional - Database (if using Supabase)
# ============================================
# PostgreSQL connection string
POSTGRES_URL=postgresql://user:password@host:port/database

# Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase anonymous key
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ============================================
# Optional - Analytics (PostHog)
# ============================================
# PostHog project API key
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key_here

# PostHog host (default: https://us.i.posthog.com)
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# ============================================
# Optional - Payments (Stripe)
# ============================================
# Stripe secret key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Stripe webhook secret (for verifying webhook signatures)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============================================
# Optional - Cron Jobs
# ============================================
# Secret for protecting cron job endpoints
CRON_SECRET=your_cron_secret_here

# ============================================
# Development
# ============================================
# Node environment (development, production, test)
NODE_ENV=development
